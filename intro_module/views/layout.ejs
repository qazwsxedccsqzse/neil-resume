<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title%></title>
    <% if(typeof(extra_links) !== "undefined"){ %>
      <% for(var index in extra_links){ %>
        <% var link = extra_links[index].split('.'); 
           var ext = link[1];
           switch(ext){
             case "css": %>
    <link href="<%- extra_links[index]%>" ref="stylesheet" type="text/css">
              <% break; %>
             <% case "js": %>
    <script src="<%- extra_links[index]%>" type="text/javascript"></script>
              <% break; %>
        <%  }
        %>
      <% } %>
    <% } %>
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/index.js"></script>

    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">
    <link href="/plugin/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="/plugin/css/bootstrap-social.css" rel="stylesheet" type="text/css">

  </head>
  <body data-spy="scroll" data-target="#nav" data-offset="0">
  <!-- header starts -->
  <nav class="navbar navbar-default" id="nav" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Neil Resume</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="#username">姓名</a></li>
          <li><a href="#experiences">經歷</a></li>
          <li><a href="#educations">學歷</a></li>
          <li><a href="#done-projects">專案</a></li>
          <li><a href="#learned-skills">技能</a></li>
          <li><a href="#contact-me">聯絡</a></li>
        </ul>
      </div>
    </div>
  </nav> 
  <div id="invisible-height">
  </div>
  <!-- header ends -->
  <div class="container">
    <%- body %>
  </div> 
  <!-- footer -->
  <div class="footer">
    <p>This Resume is powered by NodeJS and Express</p>
    <p>Copyright © 2015. All rights reserved</p>
  </div>
  </body>
</html>
